@model Araba
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

@{
    Layout = "";
}
<html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Araba Tamiri Randevu Sitesi</title>


    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/template/css/bootstrap.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">

    <!--owl slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

    <!-- font awesome style -->
    <link href="~/template/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/template/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/template/css/responsive.css" rel="stylesheet" />

</head>
<body>
    <header class="header_section">

        <div class="header_bottom">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container ">
                    <a class="navbar-Marka" href="/Anasayfa/Index">
                        <img src="~/template/images/logomuz.png" alt="">
                    </a>


                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class=""> </span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="/Anasayfa/Index">ANASAYFA <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href=/Anasayfa/Index/#hizmetler>HİZMETLERİMİZ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href=/Anasayfa/Index/#hakkinda>HAKKIMIZDA</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Urunler" asp-controller="Anasayfa">ÜRÜNLER</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="Randevu">RANDEVU İŞLEMİ</a>
                            </li>
                        </ul>
                        <div class="quote_btn-container">
                            <a asp-action="Cikis" asp-controller="Giris" class="quote_btn">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                ÇIKIŞ YAP
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <!-- contact section -->
    <section class="contact_section layout_padding-bottom">
        <div class="container-fluid">
            <div class="text-center">
                <div class="text-center">
                     <h3>Siteye Hoşgeldiniz @Accessor?.HttpContext?.Session.GetString("KullaniciAdi")</h3>
                    
                    <h2>
                        Lütfen Arabanızı Tanımlayın
                    </h2>
                </div>
            </div>

            <div class="col-lg-4 col-md-5 offset-md-4 mt-4 text-center">
                <div class="form_container text-center">
                    <form asp-action="Index" asp-controller="Randevu" method="post">
                        <div>
                            <input asp-for="Marka" type="text" placeholder="Marka" required />
                        </div>
                        <div>
                            <input asp-for="Model" type="text" placeholder="Model" required />
                        </div>
                        <div>
                            <input asp-for="Yil" type="text" placeholder="Yıl" required />
                        </div>
                        <div>
                            <input asp-for="Plaka" type="text" placeholder="Plaka" required />
                        </div>
                       

                        <div class="btn_box">
                            <button type="submit">
                                Araba Ekle
                            </button>
                        </div>
                        <div class="mt-4">
                            <p>Daha önce araba eklemişseniz randevu eklemek için<a asp-action="RandevuEkle" asp-controller="Randevu"> buraya tıklayın</a></p>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </section>
    <!-- end contact section -->
</body>
</html>
<script src="~/template/js/jquery-3.4.1.min.js"></script>
<!-- popper js -->
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
</script>
<!-- bootstrap js -->
<script src="~/template/js/bootstrap.js"></script>
<!-- owl slider -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
</script>
<!--  OwlCarousel 2 - Filter -->
<script src="https://huynhhuynh.github.io/owlcarousel2-filter/dist/owlcarousel2-filter.min.js"></script>
<!-- custom js -->
<script src="~/template/js/custom.js"></script>
<!-- Google Map -->
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap">
</script>
<!-- End Google Map -->
